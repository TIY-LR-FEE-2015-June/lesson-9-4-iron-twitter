<form {{action 'login' username password on='submit'}}>
  <label for="username">Username</label>
  {{input value=username id='username'}}

  <label for="password">Password</label>
  {{input value=password id='password' type='password'}}

  <input type="submit" value="Login">
</form>

{{#if session.currentUser}}
  <h3>Logged In User</h3>

  <p><strong>Email: </strong>{{session.currentUser.email}}</p>
  <p><strong>Username: </strong>{{session.currentUser.username}}</p>
{{/if}}